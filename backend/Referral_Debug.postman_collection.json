{
  "info": {
    "name": "Referral Debug",
    "_postman_id": "f2b9e3be-0000-4000-9000-referraldebug",
    "description": "Quick checks for referral code, summary, downline, earnings, wallet, and an ICO buy to trigger commission.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (email/password)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"you@example.com\",\n  \"password\": \"yourPassword\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login/email"
      }
    },
    {
      "name": "Signup (mobile init)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New User\",\n  \"mobile\": \"+911234567890\",\n  \"referralCode\": \"ICOCODE\" \n}"
        },
        "url": "{{baseUrl}}/api/auth/signup/mobile-init"
      },
      "description": "Starts signup with mobile OTP; note the referralCode requirement in this flow."
    },
    {
      "name": "Signup (verify OTP)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"<from-init-response>\",\n  \"otp\": \"123456\",\n  \"type\": \"mobile\",\n  \"pin\": \"1234\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/signup/verify"
      },
      "description": "Verifies the mobile OTP from signup and finalizes account; optional pin sets wallet PIN."
    },
    {
      "name": "Login (mobile - send OTP)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"mobile\": \"+911234567890\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login/mobile"
      },
      "description": "Initiates login via mobile; sends OTP."
    },
    {
      "name": "Login (mobile - verify OTP)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"mobile\": \"+911234567890\",\n  \"otp\": \"123456\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login/mobile"
      },
      "description": "Completes login with received OTP and returns JWT."
    },
    {
      "name": "Get Referral Code",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/user/referral/code"
      }
    },
    {
      "name": "Referral Summary",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/user/referral/summary"
      }
    },
    {
      "name": "Referral Downline (depth 0)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user/referral/downline?depth=0&limit=50&page=1",
          "host": [ "{{baseUrl}}" ],
          "path": [ "api", "user", "referral", "downline" ],
          "query": [
            { "key": "depth", "value": "0" },
            { "key": "limit", "value": "50" },
            { "key": "page", "value": "1" }
          ]
        }
      }
    },
    {
      "name": "Referral Downline (depth 1)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user/referral/downline?depth=1&limit=50&page=1",
          "host": [ "{{baseUrl}}" ],
          "path": [ "api", "user", "referral", "downline" ],
          "query": [
            { "key": "depth", "value": "1" },
            { "key": "limit", "value": "50" },
            { "key": "page", "value": "1" }
          ]
        }
      }
    },
    {
      "name": "Referral Earnings (history)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/user/referral/earnings"
      }
    },
    {
      "name": "Wallet Summary (incl. referral wallet)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/wallet/summary"
      }
    },
    {
      "name": "Redeem Referral Balance -> Wallet",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 100\n}"
        },
        "url": "{{baseUrl}}/api/wallet/referral/redeem"
      }
    },
    {
      "name": "ICO Buy (wallet) - trigger commission",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenAmount\": 100,\n  \"useWallet\": true,\n  \"paymentMethod\": \"wallet\"\n}"
        },
        "url": "{{baseUrl}}/api/ico/buy"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://nirv-ico.onrender.com" },
    { "key": "token", "value": "" }
  ]
}
