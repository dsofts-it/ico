{
    "info": {
        "name": "Auth Backend API",
        "description": "Complete authentication API with Email/Mobile signup, OTP verification, and PIN login",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Mobile Signup Flow",
            "item": [
                {
                    "name": "1. Mobile Signup Init (Rohan Dede)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Rohan Dede\",\n  \"mobile\": \"8446031622\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/signup/mobile-init",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "signup",
                                "mobile-init"
                            ]
                        },
                        "description": "Initiates mobile signup for Rohan Dede. Returns userId and sends OTP to mobile (check server console for OTP)"
                    },
                    "response": []
                },
                {
                    "name": "2. Verify Mobile OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"otp\": \"{{otp}}\",\n  \"type\": \"mobile\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/signup/verify",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "signup",
                                "verify"
                            ]
                        },
                        "description": "Verifies the OTP. Replace {{userId}} with the userId from step 1 and {{otp}} with the OTP from server console. Returns JWT token."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Email Signup Flow",
            "item": [
                {
                    "name": "1. Email Signup Init",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/signup/email-init",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "signup",
                                "email-init"
                            ]
                        },
                        "description": "Initiates email signup. Returns userId and sends OTP to email (check server console for OTP)"
                    },
                    "response": []
                },
                {
                    "name": "2. Verify Email OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"otp\": \"{{otp}}\",\n  \"type\": \"email\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/signup/verify",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "signup",
                                "verify"
                            ]
                        },
                        "description": "Verifies the email OTP and completes signup. Returns JWT token."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Login - Email & Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:5000/api/auth/login/email",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "auth",
                        "login",
                        "email"
                    ]
                },
                "description": "Login with email and password. Returns JWT token."
            },
            "response": []
        },
        {
            "name": "Login - Mobile OTP",
            "item": [
                {
                    "name": "1. Request Mobile OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"mobile\": \"8446031622\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/login/mobile-init",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "login",
                                "mobile-init"
                            ]
                        },
                        "description": "Request OTP for mobile login. Check server console for OTP."
                    },
                    "response": []
                },
                {
                    "name": "2. Verify Mobile OTP & Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"mobile\": \"8446031622\",\n  \"otp\": \"{{otp}}\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/login/mobile-verify",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "login",
                                "mobile-verify"
                            ]
                        },
                        "description": "Verify OTP and login. Returns JWT token."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "PIN Management",
            "item": [
                {
                    "name": "Setup PIN",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"pin\": \"1234\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/pin/setup",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "pin",
                                "setup"
                            ]
                        },
                        "description": "Setup a 4-digit PIN. Requires valid JWT token in Authorization header."
                    },
                    "response": []
                },
                {
                    "name": "Login with PIN",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"identifier\": \"8446031622\",\n  \"pin\": \"1234\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/api/auth/login/pin",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "login",
                                "pin"
                            ]
                        },
                        "description": "Login using PIN. Identifier can be email or mobile number. Returns JWT token."
                    },
                    "response": []
                }
            ]
        }
    ]
}