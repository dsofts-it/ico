{
  "info": {
    "name": "ICO Complete App Flow",
    "description": "Complete flow: Signup → OTP → PIN → Login → Wallet → ICO → Referral",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://nirv-ico.onrender.com/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "mobile",
      "value": "+919876543210",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. SIGNUP FLOW",
      "item": [
        {
          "name": "1.1 Signup with Mobile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('userId', jsonData.userId);",
                  "    console.log('User ID saved:', jsonData.userId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"mobile\": \"{{mobile}}\",\n  \"referralCode\": \"\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup/mobile-init",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup", "mobile-init"]
            }
          }
        },
        {
          "name": "1.2 Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"otp\": \"123456\",\n  \"type\": \"mobile\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup", "verify"]
            }
          }
        },
        {
          "name": "1.3 Setup PIN",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pin\": \"1234\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/pin/setup",
              "host": ["{{base_url}}"],
              "path": ["auth", "pin", "setup"]
            }
          }
        }
      ]
    },
    {
      "name": "2. LOGIN FLOW",
      "item": [
        {
          "name": "2.1 Login with PIN",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"{{mobile}}\",\n  \"pin\": \"1234\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/pin",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", "pin"]
            }
          }
        },
        {
          "name": "2.2 Login with OTP - Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('userId', jsonData.userId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"{{mobile}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/mobile-init",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", "mobile-init"]
            }
          }
        },
        {
          "name": "2.3 Login with OTP - Verify",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"{{mobile}}\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/mobile-verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", "mobile-verify"]
            }
          }
        }
      ]
    },
    {
      "name": "3. WALLET FLOW",
      "item": [
        {
          "name": "3.1 Get Wallet Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallet/summary",
              "host": ["{{base_url}}"],
              "path": ["wallet", "summary"]
            }
          }
        },
        {
          "name": "3.2 Add Money to Wallet (PhonePe)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000,\n  \"note\": \"Adding money to wallet\",\n  \"redirectUrl\": \"myapp://wallet/success\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/wallet/topup",
              "host": ["{{base_url}}"],
              "path": ["wallet", "topup"]
            }
          }
        },
        {
          "name": "3.3 Get Wallet Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallet/transactions?page=1&limit=50",
              "host": ["{{base_url}}"],
              "path": ["wallet", "transactions"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "3.4 Request Withdrawal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500,\n  \"payoutMethod\": \"bank_transfer\",\n  \"payoutDetails\": {\n    \"accountNumber\": \"1234567890\",\n    \"ifsc\": \"SBIN0001234\",\n    \"accountHolderName\": \"Test User\"\n  },\n  \"note\": \"Withdrawal request\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/wallet/withdraw",
              "host": ["{{base_url}}"],
              "path": ["wallet", "withdraw"]
            }
          }
        }
      ]
    },
